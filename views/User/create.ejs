<%- include('../Includes/begin.ejs') %>

    <div class="App">
        <%- include('../Includes/nav.ejs') %>

            <main class="main">

                <%- include('../Includes/header.ejs') %>

                   

                        <div class="main-content">
                            <div class="container">
                                <div class="row">

                                

                                    <div class="col-12">
                                        <div class="bg-white  rounded shadow-default p-3">
                                            <h5 class='text-secondary  text-raleway'>
                                                <a href='/dashboard'><i class='fa fa-home'></i></a> /
                                                <a href='/users'>Users</a> /
                                                New
                                            </h5>
                                            <div class='border-top pt-3'>
                                                <button type='button' class='btn bg-primary create_buttom' style='margin-right:7px'>Save</button>
                                                <a href='/users' class='btn bg-gray ml-4'>Cancel</a>
                                            </div>
                                        </div>
                                    </div>


                                    <div class='container'>


                                        <form class="mt-3 p-3 bg-white rounded shadow-default user-form"  action="/users" method="post">
                                            <div class="row">

                                            <% if(error ) { %>
                                                <div class="col-12">
                                                    <div class="alert alert-danger w-100 p-1 px-2">
                                                        <p>
                                                            <%= error %>
                                                        </p>
                                                    </div>
                                                </div>
                                            <% } %>

                                                <div class="col-lg-2">
                                                    <div class="user-profile bg-white p-2 rounded">
                                                        <div class="image">
                                                            <img src="/src/author.jpg" alt=""
                                                                style="height:120px;width:100%"
                                                                class='img-fluid rounded' />
                                                            <input type="file" hidden id='user-profile' />
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="col-lg-10">
                                                    <div class="row">
                                                        <div class="col-12">
                                                            <div class="input-group border  w-100 mt-2 bg-white">
                                                                <span class="input-group-text" id="basic-addon1">
                                                                    <i class="fa fa-user"></i>
                                                                </span>
                                                                <input type="text" placeholder="Names" required
                                                                    value=""  name="name"/>
                                                            </div>
                                                        </div>

                                                        <div class="col-12">
                                                            <div class="input-group border w-100 mt-2 bg-white">
                                                                <span class="input-group-text" id="basic-addon1">
                                                                    <i class="fa fa-at"></i>
                                                                </span>
                                                                <input type="email" placeholder="Email" required
                                                                    value=""  name="email"/>
                                                            </div>
                                                        </div>

                                                        <div class="col-12">
                                                            <div class="input-group border w-100 mt-2 bg-white">
                                                                <span class="input-group-text" id="basic-addon1">
                                                                    <i class="fa fa-at"></i>
                                                                </span>
                                                                <input type="text" placeholder="Login" required
                                                                    value="" name="login" />
                                                            </div>
                                                        </div>



                                                    </div>
                                                </div>

                                                <div class="col-12">
                                                    <div class="p-2 bg-white">

                                                        <ul class="nav nav-tabs" id="userTab" role="tablist">
                                                            <li class="nav-item" role="presentation">
                                                                <a class="nav-link text-secondary text-raleway active"
                                                                    data-bs-toggle="tab" data-bs-target="#info"
                                                                    href='#info'>
                                                                    Access rights
                                                                </a>
                                                            </li>
                                                            <li class="nav-item">
                                                                <a class="nav-link text-secondary text-raleway"
                                                                    data-bs-toggle="tab" data-bs-target="#u_pre"
                                                                    href='#u_pre'>
                                                                    Preferences
                                                                </a>
                                                            </li>
                                                        </ul>

                                                        <div class="tab-content p-2" id="userTabContent">
                                                            <div class="tab-pane show active" id="info" role="tabpanel">
                                                                <div class="row">

                                                                    <div class="col-md-4 col-12">
                                                                        <label for="role">Access rights role</label>
                                                                        <div
                                                                            class="input-group border w-100 mt-2 bg-white">
                                                                            <span class="input-group-text"
                                                                                id="basic-addon1">

                                                                                <i class="fa fa-poll-h"></i>
                                                                            </span>
                                                                            <select required class="w-100" id="role" name="roles">

                                                                                <option >Select role</option>
                                                                                <option value="admin">Administrator
                                                                                </option>
                                                                                <option value="user">User</option>
                                                                                <option value="employee">Employee</option>
                                                                            </select>
                                                                        </div>
                                                                    </div>

                                                                    <div class="col-md-4 col-12">
                                                                        <label for="role">Related employee</label>
                                                                        <div class="input-group border w-100 mt-2 bg-white">
                                                                            <input type="hidden" name="employee_id">
                                                                            <span class="input-group-text" >                                                         
                                                                                <i class="fa fa-user"></i>
                                                                            </span>
                                                                            <input type="text" placeholder="Related HR employee" required value="" data-route="employees" class="inputSelect" />
                                                                            <ul class="inputSelectList position-absolute bg-white rounded shadow-default top-5 left-0 w-100 d-none">
                                                                            
                                                                            </ul>
                                                                        </div>
                                                                    </div>


                                                                    <div class="col-md-4 col-12">
                                                                        <label for="password">Login password</label>
                                                                        <div class="input-group border w-100 mt-2 bg-white">
                                                                            <span class="input-group-text" id="basic-addon1">
                                                                    
                                                                                <i class="fa fa-poll-h"></i>
                                                                            </span>
                                                                            <input type="password" name="password" id="password">
                                                                        </div>
                                                                    </div>

                                                                </div>
                                                            </div>

                                                            <div class="tab-pane" id="u_pre" role="tabpanel">
                                                                <h5>Localization</h5>
                                                                <div class="row">

                                                                    <div class="col-md-6 col-12">
                                                                        <label for="zone">Language</label>
                                                                        <div
                                                                            class="input-group border w-100 mt-2 bg-white">
                                                                            <span class="input-group-text"
                                                                                id="basic-addon1">

                                                                                <i class="fa fa-poll-h"></i>
                                                                            </span>
                                                                            <select required class="w-100" id="zone" name="lang">

                                                                                <option >Select Language
                                                                                </option>
                                                                                <option value="en_US">English</option>
                                                                                <option value="fr_FR">Francais</option>

                                                                            </select>
                                                                        </div>
                                                                    </div>

                                                                    <div class="col-md-6 col-12">
                                                                        <label for="role">Time zone</label>
                                                                        <div
                                                                            class="input-group border w-100 mt-2 bg-white">
                                                                            <span class="input-group-text"
                                                                                id="basic-addon1">

                                                                                <i class="fa fa-poll-h"></i>
                                                                            </span>
                                                                            <select required class="w-100" id="role">

                                                                                <option >Select time zone
                                                                                </option>
                                                                                <option value="en_US">English</option>
                                                                                <option value="fr_FR">Francais</option>

                                                                            </select>
                                                                        </div>
                                                                    </div>

                                                                </div>
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>

                                            </div>
                                        </form>

                                    </div>
                                </div>
                            </div>
                        </div>

            </main>

    </div>
    <script>
        window.addEventListener('DOMContentLoaded', e => {
            let create = document.querySelector(".create_buttom");
            let user_form = document.querySelector('.user-form');

            if (create && user_form) {
                create.addEventListener('click', e => {
                    user_form.submit();
                });
            }
        });

    </script>
    <%- include('../Includes/end.ejs') %>