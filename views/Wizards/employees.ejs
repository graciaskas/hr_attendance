<div class="modal fade" id="employee_report_list">
    <div class="modal-dialog">
        <div class="modal-content  text-secondary">

            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fa fa-key badge bg-secondary"></i>
                    Report employees
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>


            <form action="/api/employees/?action=report" method="post">
                <div class="modal-body">

                    <div class="row">
                       
                        <div class="col-12">
                            <div class="input w-100 mt-1">
                                <label for="state">Filter employee criteria</label>
                                <div class="border rounded input-group mt-1">
                                    <div class="input-group-text">
                                        <i class="fa fa-list"></i>
                                    </div>
                                    <select name="active" id="state" class="w-100">
                                        <option value="1">Active</option>
                                        <option value="0">Archived</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="mt-2 d-flex align-items-center">
                                <input type="checkbox" name="groupby" id="group">
                                <label class="w-100" for="group" style="margin-left: 10px;">
                                    Group records ?
                                </label>
                            </div>

                            <div class="input w-100 mt-2 d-none groupby_input">
                                <label for="state">Select groupby criteria</label>
                                <div class="border rounded input-group mt-1 ">
                                    <div class="input-group-text">
                                        <i class="fa fa-list"></i>
                                    </div>
                                    <select name="active" id="state" class="w-100">
                                        <option value="dep_name">Department</option>
                                        <option value="job_title">Position</option>
                                        <option value="state">State</option>
                                        <option value="city">City</option>
                                        <option value="supervor_id">Supervisor</option>
                                        <option value="country_id">Country</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>

                <div class="modal-footer">
                    <button class="btn bg-primary text-white" type="submit">
                        <i class="fa fa-file-pdf"></i>
                        Print Pdf
                    </button>
                    <button class="btn bg-secondary text-white" type="submit">
                        <i class="fa fa-file-excel"></i>
                        Print excel
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>

<script type="text/javascript">
    document.querySelector("input[type=checkbox]")
        .addEventListener("change", e => {
            console.log(e.target.checked, e.target);
            if(e.target.checked) {
                document.querySelector(".groupby_input").classList.remove('d-none');
            } else {
                document.querySelector(".groupby_input").classList.add('d-none');
            }
        });
</script>