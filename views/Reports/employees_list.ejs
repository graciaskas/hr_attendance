<html lang="en-US">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        * {
            font-size: .87rem;
            font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        }

        body {
            padding: 3.7rem 3.2rem;
        }

        header {
            border-bottom: 2px solid black;
            padding-bottom: 1rem;
        }

        table {
            width: 100%;
            margin: 1.5rem 0;
            color: #212529;
            vertical-align: top;
            border-left: 1px solid #dee2e6;
            border-top: 1px solid #dee2e6;
            caption-side: bottom;
            border-collapse: collapse;
        }

        table>tbody {
            vertical-align: inherit;
        }


        table td,
        table th {
            padding: 5px 8px;
            text-align: left;
        }

        table th {
            background-color: #dee2e6;
        }

        table tr>* {
            border-right: 1px solid #dee2e6;
        }

        table tr {
            border-bottom: 1px solid #dee2e6;
        }

        .grids>.grid {
            display: inline-block;
            margin-right: 20px;
        }

        .d-block {
            display: block !important;
        }

        .badge {
            border-radius: 30px;
            padding: 1px 7px;
            color: white;
            font-weight: bold;
        }

        .bg-primary {
            background-color: #1da1f2;
        }
    </style>
</head>

<body>
    <header>
        <h3><span class="badge bg-primary">HR</span> Attendance</h3>
    </header>
    <main>
        <h4>Report employees list</h4>

        <div class="grids">
            <div class="grid">
                <strong class="d-block">System User:</strong>
                <span>
                    <%=meta.user%>
                </span>
            </div>
            <div class="grid">
                <strong class="d-block">TimeStamp:</strong>
                <span>
                    <%=meta.time%>
                </span>
            </div>
        </div>

        <!-- Report table -->
        <table>
            <!-- Report table header -->
            <thead>
                <tr>
                    <th>#</th>
                    <th>RNO</th>
                    <th>Employee</th>
                    <th>Department</th>
                    <th>Position</th>
                    <th>Work time</th>
                    <th>Approved by</th>
                    <th>State</th>
                </tr>
            </thead>

            <!-- Report table body-->
            <tbody>
                <% for( let item of data ) { %>
                    <tr>
                        <td>
                            <%=item.id%>
                        </td>
                        <td>
                            <%=item.roll_no%>
                        </td>
                        <td>
                            <%=item.name%>
                        </td>
                        <td>
                            <%=item.dep_name%>
                        </td>
                        <td>
                            <%=item.job_title %>
                        </td>
                        <td></td>
                        <td>
                            <%=item.approved_by%>
                        </td>
                        <td><span class="badge bg-primary">
                                <%=item.state%>
                            </span></td>
                    </tr>
                    <% } %>
            </tbody>
        </table>

        <br><br>
        <strong style="float: right;">Manager's signature</strong>
    </main>
</body>

</html>