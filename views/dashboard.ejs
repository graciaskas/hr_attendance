<%- include('./Includes/begin.ejs') %>

<!-- <link rel="stylesheet" href="../CSS/admin-dashboard.css"> -->

<div class="App">
    <%- include('./Includes/nav.ejs') %>

    <main class="main">

        <%- include('./Includes/header.ejs') %>

        <div class="main-content">
        
            <div class="container-lg">
                <div class="row">
                    <div class="col-12">
                        <div class="p-3 bg-white shadow-default d-flex align-items-center rounded mb-3">
                            <div class="text-raleway" style="font-size: 1.2rem">ðŸ™Œ Welcome <%= user.name %> !</div>
                        </div>
                    </div>

                <% if ( user.role=='admin' || user.role=='user' ) { %>

                    <div class="col-lg-4 col-md-6 col-sm-6 col-12">
                        <div class="p-3 bg-white  rounded shadow-default mb-2">
                            <div class="border-bottom">
                                <h5 class="card-title">Total Employees</h5>
                            </div>
                            <div class="d-flex align-items-center justify-content-between">
                                <div class="icon display-5">
                                    <span class="fa fa-users text-primary"></span>
                                </div>
                                <div class="display-6 text-primary text-raleway">56</div>
                            </div>
                           
                        </div>
                    </div>

                    

                    <div class="col-lg-4 col-md-6 col-sm-6 col-12">
                        <div class="p-3 bg-white rounded shadow-default mb-3">
                            <div class="border-bottom">
                                <h5 class="card-title">Current Attendances</h5>
                            </div>
                            <div class="d-flex align-items-center justify-content-between">
                                <div class="icon display-5">
                                    <span class="fa fa-clipboard-list "></span>
                                </div>
                                <div class="display-6 text-raleway">12</div>
                            </div>
                    
                        </div>
                    </div>
                    

                    <div class="col-lg-4">
                        <div class="p-3 bg-white rounded shadow-default ">
                            <div class="border-bottom">
                                <h5 class="card-title">System Users</h5>
                            </div>
                            <div class="d-flex align-items-center justify-content-between">
                                <div class="icon display-5">
                                    <span class="fa fa-user-friends text-success"></span>
                                </div>
                                <div class="display-6 text-raleway">34</div>
                            </div>
                    
                        </div>
                    </div>
                    
                <% } %>
                   
                   
                
                    <div class="col-12">
                        <% if ( user.role=='admin' || user.role=='user' ) { %>
                            <h4 class="mt-3">Lastest registered attendances</h4>
                        <% } else { %>
                            <h4 class="mt-3">Your lastest taken attendances</h4>
                        <% } %>
                        <div class="p-3 mt-2 bg-white rounded shadow-default mb-3 table-responsive">
                            
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th><input type="checkbox" name="" id="" /></th>
                                        <th class="border-right">#</th>
                                        <th scope="col">Employee</th>
                                        <th>Checkin</th>
                                        <th>CheckOut</th>
                                        <th>Work hours</th>
                                        <th>Approved</th>
                                        <th class="text-right">State</th>
                                    </tr>
                                </thead>
                
                                <tbody class='table-body-striped'>
                                    <% for( let attendance of data ) { %>
                                        <tr>
                                            <td><input type="checkbox" name="" id="" /></td>
                                            <td><%= attendance.id %></td>
                                            <td>
                                                <%= attendance.emp_name %>
                                            </td>
                                            <td><%= attendance.checkin.toLocaleString() %></td>
                                            <td>
                                                <%= attendance.checkout %>
                                            </td>
                                            <td><%= millisecTotime(attendance.worked_hours) %></td>
                                            <td><%= attendance.emp_approved %></td>
                                            <td class="text-center">
                                                <span class="bg-primary rounded-pill px-2 text-white">
                                                    <%= attendance.state %>
                                                </span>
                                            </td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>


    </main>
</div>



<%- include('./Includes/end.ejs') %>