<%- include('../Includes/begin.ejs') %>

<div class="App">
    <%- include('../Includes/nav.ejs') %>
    
    <main class="main">
        
        <%- include('../Includes/header.ejs') %>

        <div class="main-content">
            <div class="container">
                <div class="row">
        
        
                    <div class="col-12">
                        <div class="bg-white  rounded shadow-default p-3">
                            <h5 class='text-secondary  text-raleway'>
                                <a href='/dashboard'><i class='fa fa-home'></i></a> /
                                <a href='/departments'>Departments</a> / New
                            </h5>
                            <div class='border-top pt-3'>
                                <button type='button' class='btn bg-primary create_button'
                                    style='margin-right:7px'>Save</button>
                                <a href='/departments' class='btn bg-gray ml-4'>Cancel</a>
                            </div>
                        </div>
                    </div>
        
        
                    <div class='container'>
                        <form class="mt-3 p-3 bg-white rounded shadow-default user-form" method="post" action="/api/departments">
                            <div class="row">
                        
                                <div class="col-12">
                                    <div class="d-flex user-stats">
                                        <div class="stat-button d-flex align-item-center">
                                            <i class="fa fa-users stat-icon"></i>
                                            <div class="stat-info">
                                                <span class="badge bg-secondary d-inline-block">1</span>
                                                <span class="d-block">Employees</span>
                                            </div>
                                        </div>
                                       
                                    </div>
                                </div>
                        
                                <% if(error !=null ) { %>
                                    <div class="col-12">
                                        <div class="alert alert-danger w-100 p-1 px-2">
                                            <p>
                                                <%= error %>
                                            </p>
                                        </div>
                                    </div>
                                <% } %>
                        
                                <div class="col-lg-12">
                                    <div class="row">
                                        <div class="col-md-6 col-12">
                                            <label for="name">Department name</label>
                                            <div class="input-group border  w-100  mt-1 bg-white">
                                                <span class="input-group-text" id="basic-addon1">
                                                    <i class="fa fa-at"></i>
                                                </span>
                                                <input type="text" placeholder="Department name" required value=""  name="name"/>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <label for="name">Parent department</label>
                                            <div class="input-group border  w-100 mt-1 bg-white">
                                                <span class="input-group-text" id="basic-addon1">
                                                    <i class="fa fa-at"></i>
                                                </span>
                                                <input type="text" placeholder="Department name" required value="" />
                                            </div>
                                        </div>
                        
                                        <div class="col-md-6 col-12">
                                            <label for="name">Manager</label>
                                            <div class="input-group border w-100  mt-1 bg-white">
                                                <input type="hidden" name="manager_id" type="number" required="true">
                                                <span class="input-group-text">
                                                    <i class="fa fa-user"></i>
                                                </span>
                                                <input type="text" placeholder="Department manager" required value="" data-route="employees" class="inputSelect"/>
                                                <ul class="inputSelectList position-absolute bg-white rounded shadow-default top-5 left-0 w-100 d-none">
                                                
                                                </ul>
                                            </div>
                                            
                                        </div>
                        
                                        <div class="col-md-6">
                                            <label for="name">Code</label>
                                            <div class="input-group border w-100  mt-1 bg-white">
                                                <span class="input-group-text" id="basic-addon1">
                                                    <i class="fa fa-key"></i>
                                                </span>
                                                <input type="text" placeholder="Title" required value=""  name="code"/>
                                            </div>
                                        </div>
                        
                                    </div>
                                </div>
                        
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

   </main>
</div>

<%- include('../Includes/end.ejs') %>