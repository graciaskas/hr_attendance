<%- include('../Includes/begin.ejs') %>

    <div class="App">
        <%- include('../Includes/nav.ejs') %>

            <main class="main">

                <%- include('../Includes/header.ejs') %>

                <div class="main-content">
                    <div class="container">
                        <div class="row">

                            <%- barCreate({ appName, appRootLocation, create:true }) %>


                                <div class="col-12">
                                    <div class="bg-white p-3 shadow-default rounded">
                                        <table class="table">
                                            <tr>
                                                <th><input type="checkbox" name="" id=""></th>
                                                <th>#</th>
                                                <th>Code</th>
                                                <th>Department name</th>
                                                <th>Manager</th>
                                                <th>Employees</th>
                                                <th>Status</th>
                                               
                                            </tr>
                                            <tbody class="table-body-striped">
                                                <% for( let department of data) { %>
                                                    <tr onclick="window.location.href='/departments/view/<%= department.dep_id %>'">
                                                        <td><input type="checkbox"></td>
                                                        <td><%= department.dep_id%></td>
                                                        <td><%= department.dep_code %></td>
                                                        <td><%= department.dep_name %></td>
                                                     
                                                        <td><%= department.emp_name %></td>
                                                        <td><%= department.dep_emp %></td>
                                                        <th><span class="badge bg-primary rounded-pill">Closed</span></th>
                                                       
                                                    </tr>
                                                <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                        </div>
                    </div>
                </div>
            </main>

    </div>

    <%- include('../Includes/end.ejs') %>